<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:outlineAmbientShadowColor">@color/dark_yellow</item>
        <item name="android:outlineSpotShadowColor">@color/dark_yellow</item>
        <item name="cardBackgroundColor">@color/dark_blue_0</item>
        <item name="android:background">@drawable/border_drawable</item>
        <item name="android:shadowColor">@color/dark_yellow</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardElevation">10dp</item>
        <item name="cardCornerRadius">5dp</item>
    </style>
</resources>