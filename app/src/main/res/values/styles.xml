<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ToolbarMenuStyle" parent="Widget.AppCompat.PopupMenu">
        <!-- <item name="android:popupBackground">@color/dark_blue_0</item> Color de fondo deseado -->
    </style>
    <style name="ToolbarTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item> <!-- Tamaño de fuente deseado -->
    </style>

    <style name="DividerStyle" parent="Widget.Material3.MaterialDivider">
        <item name="android:background">@color/dark_yellow</item>
        <item name="dividerColor">@color/dark_yellow</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>
    <style name="DividerStyle2" parent="Widget.Material3.MaterialDivider">
        <item name="android:background">@color/white_50</item>
        <item name="dividerColor">@color/white_50</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>

    <style name="CardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">100dp</item>
        <item name="cardBackgroundColor">@color/dark_blue_0</item>
        <item name="android:background">@drawable/border_drawable</item>
        <item name="android:shadowColor">@color/dark_yellow</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardElevation">10dp</item>
        <item name="cardCornerRadius">5dp</item>
    </style>

    <style name="CustomDialog" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/CustomDialogAnimation</item>
    </style>

    <style name="CustomDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="TextStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/white_60</item> <!-- Cambia el color a tu preferencia -->
    </style>
    <!-- Estilo para el título -->
    <style name="TitleText" parent="android:TextAppearance">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dark_yellow</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Estilo para los encabezados -->
    <style name="HeaderText" parent="android:TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dark_yellow</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Estilo para los textos generales -->
    <style name="BodyText" parent="android:TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/white_60</item>
        <item name="android:textColorHint">#808080</item>
    </style>

    <!-- Estilo para las etiquetas informativas -->
    <style name="InfoText" parent="android:TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FF0000</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/white_60</item>
        <item name="android:textColorHint">#808080</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="TextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white_60</item>
        <item name="android:textColorHint">#808080</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="CheckStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">@color/white_60</item>
        <item name="android:textColorHint">#808080</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="RadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">@color/white_60</item>
        <item name="android:textColorHint">#808080</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>
